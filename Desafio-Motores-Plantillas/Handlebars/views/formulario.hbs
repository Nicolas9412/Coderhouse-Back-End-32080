<div class="d-flex flex-column">
  <div class="mb-2">
    <a class="btn btn-info text-white" href="http://localhost:8080/productos">Ir
      a listado📝</a>
  </div>
  <div class="shadow p-4">
    <form action="/productos" method="post">
      <h1 class="text-center fw-bold mb-4">Ingrese Producto</h1>
      <div class="mb-3">
        <input
          type="text"
          name="title"
          id="title"
          class="form-control"
          placeholder="Nombre"
        />
      </div>
      <div class="mb-3">
        <input
          type="text"
          name="price"
          id="price"
          class="form-control"
          placeholder="Precio"
        />
      </div>
      <div class="mb-3">
        <input
          type="text"
          name="thumbnail"
          id="thumbnail"
          class="form-control"
          placeholder="Imagen"
        />
      </div>
      <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-dark">Cargar</button>
      </div>
    </form>
  </div>
</div>