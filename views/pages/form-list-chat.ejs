<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>Vista de Productos</title>
<link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
    crossorigin="anonymous">
</link>
  </head>
  <body class="w-100 h-100 px-5 py-5 d-flex justify-content-center">
    <div class="d-flex justify-content-between w-100 shadow py-5 px-5" style="background-color: #99EDC3;">
      <h1 class="fw-bold text-center text-success" style="color: blue">Bienvenido <%= user.username %></h1>
      <a href="logout">
      <input class="btn btn-warning" type="button" value="Desloguear">
      </a>
    </div>
    <div class="shadow p-4 mt-3">
      <form id="form" onsubmit="return submitProduct(event)">
        <h1 class="text-center fw-bold mb-4">Ingrese Producto</h1>
        <div class="mb-3">
          <input
            type="text"
            name="title"
            id="title"
            class="form-control"
            placeholder="Nombre"
            required
          />
        </div>
        <div class="mb-3">
          <input
            type="text"
            name="price"
            id="price"
            class="form-control"
            placeholder="Precio"
            required
          />
        </div>
        <div class="mb-3">
          <input
            type="text"
            name="thumbnail"
            id="thumbnail"
            class="form-control"
            placeholder="Imagen"
            required
          />
        </div>
        <div class="d-flex justify-content-center">
          <button type="submit" class="btn btn-dark">Cargar</button>
        </div>
      </form>
    </div>
    
    <div class="mt-4">
      <h1 class="text-center fw-bold mb-4">Listado de productos</h1>
      <table class="table table-dark table-bordered">
        <thead>
          <tr>
            <th class="text-center" scope="col">Nombre</th>
            <th class="text-center" scope="col">Precio</th>
            <th class="text-center" scope="col">Imagen</th>
          </tr>
        </thead>
        <tbody>
          <% productos.forEach(function(prod) { %>
            <tr>
              <td class="text-center"><%= prod.title %></td>
              <td class="text-center"><%= prod. %></td>
              <td class="text-center"><img
                  src=<%= prod.thumbnail%>
                  style="width: 40px; height: 40px;"
                  class="img-thumbnail"
                  alt={{this.title}}
                /></td>
            </tr>
            <% }); %> 
        </tbody>
      </table>
    </div>
    
    <div class="shadow p-3 mt-4">
      <h1 class="text-center fw-bold mb-4">Centro de mensajes</h1>
      <form id="form-chat" onsubmit="return submitMenssage(event)">
        <input
          class="form-control"
          type="email"
          name="email"
          id="email"
          placeholder="email"
          required
        />
        <hr />
        <div class="chat my-3" id="chat">
          <% chat.forEach(function(msj) { %>
            <p style="margin:5px;">
              <span class="fw-bold" style="color:blue;"><%= msj.email %></span>
              <span style="color:brown;"> [<%= msj.fecha %>]</span>
              <span class="fst-italic" style="color:green;">
                :
                <%= msj.mensaje %></span>
            </p>
         <% }); %> 
        </div>
        <div class="d-flex justify-content-center mt-2">
          <input
            class="form-control"
            type="text"
            name="mensaje"
            id="mensaje"
            placeholder="mensaje"
            required
          />
          <button
            type="submit"
            class="btn btn-info text-white ms-3"
          >Enviar!</button>
        </div>
      </form>
    </div>
  </body>
</html>
